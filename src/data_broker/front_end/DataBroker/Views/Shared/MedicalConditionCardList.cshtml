@model IEnumerable<MedicalCondition>

@{
    Layout = null;
}

<div id="mc-list">
    @Html.EditorFor(m => m)

    <div class="card" id="addition-mc-card">
        <div class="card-body">
            <p class="card-text">
                <i class="fas fa-plus"></i> <span id="add-mc">Click here to add</span> medical conditions.
            </p>
        </div>
    </div>
</div>

@* Use <script> to pass in the model information (JSON-fy it if necessary) to the external js file *@
<script>
    var MODEL_COUNT = @Model.Count();
    if (MODEL_COUNT > 0) {
        $('.mc-edit').css('display', 'none');
    }
</script>
<script src="~/js/components/medical-conditions.js" type="module" asp-append-version="true"></script>
<link rel="stylesheet" href="~/css/components/medical-conditions.css"/>
